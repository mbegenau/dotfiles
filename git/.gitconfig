[core]
  excludesfile = ~/.gitignore_global
  editor = vim
  filemode = false
  trustctime = false
  autocrlf = input

[alias]
  st = status
  sts = status -sb
  stl = ls-files -m -o --exclude-standard
  ci = commit
  br = branch
  co = checkout
  cr = clone --recursive
  df = diff --word-diff
  unstage = reset --hard HEAD
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  ll = log --pretty=oneline --graph --abbrev-commit
  lm = log --pretty=format:'* %s (%h)'
  lg = log -p
  g = grep --break --heading --line-number
  amend = commit --amend --reuse-message=HEAD
  contrib = shortlog --summary --numbered
  show-ignored = "! git clean -ndX | perl -pe 's/Would remove/Ignored:/'"
  ld = "!sh -c \"git log --since '${1:-1} days ago' --oneline --author $(git config user.email)\" -"
  pr = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"

[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"

[grep]
  lineNumber = true

[help]
  autocorrect = 1

[difftool]
  prompt = false

[mergetool]
  prompt = false

[push]
  default = simple
  followTags = true

[fetch]
  prune = true

[diff]
  renames = copies

[user]
	name = Patrick Truebe
	email = patrick@relenda.de

[github]
  user = patricktruebe

[color]
	ui = auto
	branch = auto
	diff = auto
	interactive = auto
	status = auto

[alias]
	st = status
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	branchlog = log --branches --remotes --tags --simplify-by-decoration --decorate --oneline --all --graph
	treelog = log --branches --remotes --tags --decorate --oneline --all --graph --first-parent
	fulltree = log --branches --remotes --tags --decorate --oneline --all --graph
	history = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	hist = history
	pr = pull --rebase
	fa = fetch --all --prune
	dc = diff --cached
	ff = pull --ff-only
	c = commit
	s = status
	sw = show
	co = checkout
	rb = rebase
	br = branch
	dw = diff --word-diff=color
	ls = ls-files
	wc = whatchanged --oneline
	zip = archive --format zip --output "-" master -9
	untrack = update-index --assume-unchanged
	pullall = !f(){ git pull --rebase "$@" && git submodule update --init --recursive; }; f
	rmrb = push --delete origin
	pushall = push --recurse-submodules=on-demand

[push]
	default = current

[pull]
	rebase = true

[merge]
	tool = meld

[diff]
	tool = meld

[difftool]
	prompt = false

[mergetool]
	prompt = false

[gui]
	editor = atom
